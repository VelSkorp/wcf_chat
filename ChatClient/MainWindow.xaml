<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="ChatLoad" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUser" HorizontalAlignment="Left" Height="49" Margin="153,10,0,0" TextWrapping="Wrap" Text="Введите имя" VerticalAlignment="Top" Width="355"/>
        <Button x:Name="bConDiscon" Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="125" Height="49" Click="Button_Click"/>
        <ListBox x:Name="lbChat" Height="261" Margin="10,64,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbMessage" Height="50" Margin="10,343,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" KeyDown="tbMessage_KeyDown"/>

    </Grid>
</Window>
